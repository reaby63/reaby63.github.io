footer {
  .yilan-information {
    @apply bg-white p-2 text-sm font-normal;
    .yilan-information-width {
      .privacy-btn {
        a {
          color: #c44d5f;
          @apply inline-block px-2 my-1;
          &:nth-child(1) {
            @apply pl-0;
          }
          &:nth-child(2),
          &:nth-child(3) {
            border-left: solid 1px #c44d5f;
          }
          &:hover {
            @apply underline;
          }
        }
      }

      .information {
        color: #673c42;
        .information-01 img {
          @apply inline-block ml-2;
        }
        .information-02,
        .information-03,
        .information-04,
        .information-05,
        .information-06,
        .information-07 {
          @apply my-3;

          @media (min-width: 769px) {
            @apply my-1;
          }

          span {
            @apply inline-block;
            &:nth-child(1) {
              width: 14px;
              position: relative;
              top: 2px;
              margin-right: 3px;
              vertical-align: top;
            }
            &:nth-child(2) {
              width: calc(100% - 17px);
            }

            div {
              margin: 0px;
              em {
                border: solid 1px #673c42;
                @apply not-italic inline-block p-1 my-1 mr-2;
              }
            }
          }
        }
        .information-08 span {
          display: block;
          color: #747474;
          margin-bottom: 2px;
          @media (min-width: 769px) {
            color: #673c42;
          }
          &:nth-child(1) {
            display: block;
          }
        }
      }
    }
  }

  .yilan-area {
    background-color: #673c42;
    @apply py-2 px-2 font-thin text-center text-sm;
    .yilan-area-width {
      width: 100%;
      a {
        @apply underline text-white inline-block py-2 px-2;
      }
    }
  }

  .yilan-copyright {
    background-color: #573137;
    @apply text-white text-center py-1 font-thin text-sm;
  }
}

@import "tailwindcss/utilities";

@media (min-width: 769px) {
  .yilan-information-width {
    max-width: 1200px;
    margin: 0 auto;

    .privacy-btn {
      @apply mb-4;
    }

    .information {
      display: flex;
      flex-wrap: wrap;
      color: #673c42;

      div {
        @apply inline-flex;
        align-items: center;
      }

      .information-01 {
        width: 100%;
      }

      .information-02 {
        width: 39%;
      }
      .information-03 {
        order: 1;
        width: 39%;
      }
      .information-04 {
        order: 2;
        width: 39%;
      }
      .information-05 {
        order: 0;
        width: 26%;
      }
      .information-06 {
        order: 0;
      }
      .information-07 {
        order: 1;
        span {
          div {
            &:first-child {
              width: 26em;
            }
            &:last-child {
              width: 18em;
            }
            em {
              @apply p-0 my-0 mr-2;
            }
          }
        }
      }
      .information-08 {
        order: 2;
      }

      .information-08 span {
        display: inline-block;
        color: #673c42;
        &:nth-child(1) {
          width: 11em;
          border-right: solid 1px #673c42;
        }
        &:nth-child(2) {
          width: 21em;
          @apply pl-3;
          border-right: solid 1px #673c42;
        }
        &:nth-child(3) {
          width: 9em;
          @apply pl-3;
        }
      }
    }
  }

  .yilan-area-width {
    max-width: 500px;
    margin: 0 auto;
  }
}
