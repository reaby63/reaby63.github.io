
// 最外層設定
body{
    background-color: #FCF2F2;
}

article{
    max-width: 1200px;
    padding-top: 20px;
    padding-bottom: 80px;
    margin:0 8px;
}

button{
    border:0px;
    padding:0px;
    background-color: #ffffff;
}

select{
    border:0px;
}



// 左半部
.article-left{
    width: 100%;
    @apply block;
    .article-left-title{
        width: 100%;
        padding:5px 0;
        .title-line{
            height: 10px;
            width: calc( 50% - 20px - 3.28em);
            vertical-align: middle;
            @apply inline-block;
        }
        .title-words{
            vertical-align: middle;
            color: #673C42;
            margin:10px 18px;
            font-size: 1.7em;
            @apply font-medium inline-block;
        }
        .title-line-orange{
            background-color: #FF986A;
        }
        .title-line-red{
            background-color: #FF5872;
        }
        .title-line-yellow{
            background-color: #FFAD4D;
        }
        .title-line-pink{
            background-color: #ED8080;
        }
    }
    .more{
        width: 100%;
        margin-top:15px;
        display: flex;
        justify-content: flex-end;
        outline: none;
        button{
            outline: none;
            color: #882A2A;
            text-decoration: underline;
            background-color: #FCF2F2;
            &:hover{
                opacity: 85%;
            }
        }
        img{
            position: relative;
            top: -2px;
            @apply inline-block;
        }
    }
    .news{
        .news-in{
            .news-self{
                margin-bottom: 20px;
                padding-bottom: 8px;
                margin-right: 0px;
                width: 100%;
                background-color: #ffffff;
                box-shadow: 0 1px 4px #d8d8d8;
                border-radius: 3px;
                outline: none;
                text-align: left;
                position: relative;
                transition: all .2s;
                @apply inline-block font-medium;
                .news-self-photo{
                    border-radius: 3px 3px 0 0;
                    .news-self-photo-size{
                        width: 100%;
                        overflow: hidden;
                        img{
                            width: 100%;
                            overflow: hidden;
                        }
                    }
                }
                .news-self-tag{
                    position: absolute;
                    bottom:3.7em;
                    left: 0px;
                    color: #ffffff;
                    padding:3px 8px;
                    @apply block font-normal;
                }
                .blue-tag{
                    background-color:rgba(1,93,150,.9);
                }
                .pink-tag{
                    background-color:rgba(235,88,88,.9) ;
                }
                .orange-tag{
                    background-color: rgba(253,129,3,.9);
                }
                .news-self-words{
                    height: calc( 3em + 8px);
                    color: #3C3C3C;
                    padding:4px 8px;
                    overflow: hidden;
                    white-space: normal;
                    text-overflow: ellipsis;
                    display: -webkit-box;
                    -webkit-line-clamp: 2;
                    -webkit-box-orient: vertical;
                }
                &:hover{
                    background-color: #FFD6AD;
                    top: 2px;
                    left: 2px;
                }
            }
        }
    }
    .month-active{
        .month-active-in{
            .month-active-list{
                background-color: #ffffff;
                cursor: pointer;
                position: relative;
                margin-bottom: 10px;
                &:hover {
                    z-index:1;
                }
                &:after{
                    background-color: #ffffff;
                    z-index: -3;
                    transition: .3s;
                    width: 0%;
                }
                &:before{
                    background-color: #FABDC7;
                    z-index: -1;
                    transition: .3s;
                    width: 0%;
                }
                &:hover:after , &:hover:before{
                    width: 100%;
                }
                &:after , &:before {
                    content: "";
                    background-color: #EA919F;
                    width: 0%;
                    height:100%;
                    position: absolute;
                    top: 0px;
                    left: 0;
                    z-index: -2; 
                }
                &:hover .month-active-time{
                    background-color:#E08392 ;
                }
                &:hover .month-active-title , &:hover .month-active-title .month-active-tag{
                    color: #ffffff;
                }
                .month-active-time{
                    background-color: #e88091;
                    color: #ffffff;
                    padding:4px 10px;
                    @apply inline-block text-lg;
                }
                .month-active-title{
                    color: #673C42;
                    padding-top:5px;
                    padding-bottom: 8px;
                    padding-left: 10px;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    white-space: nowrap;
                    width: calc( 100% - 10em);
                    vertical-align: middle;
                    @apply font-normal text-lg font-medium block;
                    .month-active-tag{
                        color: #EA677B;
                        padding-right: 0.3em;
                        position: absolute;
                        top: 0.2em;
                        left: 8em;
                    }
                }
                &:last-child{
                    margin-bottom: 0px;
                }
            }
        }
    }

    .hot-travel{
        .hot-travel-in{
            .hot-travel-self{
                margin-bottom: 20px;
                padding-bottom: 8px;
                margin-right: 0px;
                width: 100%;
                background-color: #ffffff;
                box-shadow: 0 1px 4px #d8d8d8;
                border-radius: 3px;
                outline: none;
                text-align: left;
                transition: all .2s;
                @apply inline-block font-medium;
                .hot-travel-photo{
                    border-radius: 3px 3px 0 0;
                    .hot-travel-photo-size{
                        width: 100%;
                        overflow: hidden;
                        img{
                            width: 100%;
                            overflow: hidden;
                        }
                    }
                }
                .hot-travel-about{
                    padding:4px 8px;
                    .hot-travel-title{
                        overflow: hidden;
                        text-overflow: ellipsis;
                        white-space: nowrap;
                        width: 100%;
                        color: #3B3B3B;
                        @apply text-xl pb-1 font-normal;
                    }
                    .hot-travel-date{
                        @apply text-sm pb-1;
                    }
                    .hot-travel-words{
                        color: #3B3B3B;
                        overflow: hidden;
                        white-space: normal;
                        text-overflow: ellipsis;
                        display: -webkit-box;
                        -webkit-line-clamp: 2;
                        -webkit-box-orient: vertical;
                        @apply text-sm font-normal;
                    }
                    .hot-travel-yellow{
                        color: #d87a28;
                    }
                    .hot-travel-pink{
                        color: #BC4A60;
                    }
                }
                &:last-child{
                    margin-right: 0px;
                }
            }
            .hot-hover:hover{
                position: relative;
                top:2px;
                left: 2px;
                background-color: #FFE4C9;
            }
            .travel-hover:hover{
                position: relative;
                top:2px;
                left: 2px;
                background-color: #F8DADA;
            }
        }
    }

    .search-box{
        margin:50px 0;
        background-color: #ffffff;
        width: 100%;
        padding:30px 16px;
        .search-title{
            color:#C44D5F ;
            text-align: center;
            width: 98%;
            padding-bottom: 5px;
            border-bottom: solid 2px #FFC66A;
            position: relative;
            margin-bottom: 15px;
            @apply text-3xl font-medium;
            img{
                margin-right: 4px;
                position: relative;
                top: -3px;
                @apply inline-block;
            }
            &:before , &:after{
                content: "";
                display: block;
                position: absolute;
                width: 9px;
                height: 9px;
                border-radius: 50%;
                background-color: #FFC66A;
            }
            &:before{
                left: -3px;
                bottom: -5px;
            }
            &::after{
                right: -3px;
                bottom: -5px;
            }
        }

        .search-line{
            width: 98%;
            margin:0 auto;
            margin-bottom: 25px;
            @apply block;
            .search-place , .search-time{
                color: #525252;
                @apply text-xl block;
                img{
                    position: relative;
                    top:-0.1em;
                    @apply inline-block;
                }
            }
            .search-place{
                width:100%;
                margin-bottom: 10px;
            }
            .search-time{
                width:100%;
            }
        }

        .search-list{
            margin-bottom: 30px;
            .search-list-title{
                color: #525252;
                margin-bottom: 13px;
                @apply text-xl;
                img{
                    position: relative;
                    top: -2px;
                    @apply inline-block;
                }
            }
            .search-category{
                .search-category-btn{
                    width: calc( ( 100% - 24px ) / 3);
                    border:solid 1px #E0E0E0;
                    text-align: center;
                    padding: 18px 0;
                    border-radius: 5px;
                    margin-right: 8px;
                    margin-bottom: 8px;
                    color: #525252;
                    transition: all .2s;
                    outline: none;
                    .search-category-logo{                    
                        margin:0 auto;
                        margin-bottom: 4px;
                        position: relative;
                        @apply block;
                        .search-category-btn-red{
                        }
                        .search-category-btn-white{
                            position: absolute;
                            top: 0;
                            left: 0;
                            opacity: 0;
                        }
                    }
                    &:hover , &:focus {
                        background-color: #C44D5F;
                        color: #ffffff;
                        .search-category-logo .search-category-btn-red{
                            opacity: 0;
                            position: absolute;
                        }
                        .search-category-logo .search-category-btn-white{
                            position: initial;
                            opacity: 100;
                        }
                    }
                }
            }
        }

        .search-words{
            color: #525252;
            width: 100%;
            text-align: center;
            margin-bottom: 25px;
            @apply text-xl block;
            .search-words-input{
                width: 100%;
                margin:0 auto;
                @apply block;
                input[type="text"]{
                    width: 100%;
                    border: solid 1px #9A9A9A;
                    border-radius: 3px;
                    padding:2px 8px;
                    outline: none;
                }
            }
        }

        .search-start{
            width: 100%;
            @apply block;
            .search-start-btn{
                background-color:#C44D5F ;
                border-radius: 5px;
                padding:10px 0;
                text-align: center;
                width: 45%;
                color: #ffffff;
                margin:0 auto;
                outline: none;
                transition: all .2s;
                @apply text-lg block;
                &:hover{
                    background-color: #E35369;
                }
            }
        }

    }   

    .article-search{
        border:solid 1px #CBCBCB;
        border-radius: 3px;
        position: relative;
        padding-left: 3px;
        position: relative;
        @apply inline-block;
        select {
            outline: none;
            /* 將預設下拉箭頭刪除 */
            appearance:none;
             -moz-appearance:none;
            -webkit-appearance:none;
            z-index: 3;
            background: url("article-select-arrow.png") no-repeat scroll right center transparent;
            padding-right: 0px;
        }
        .select-arrow{
            position: absolute;
            top:0px;
            left: 0px;
            z-index: 1;
        }
    }
    
    .search-place-box{
        width:69%;
        select{
            width: 100%;
            color: #909090;
            @apply font-normal;
        }
    }
    .search-time-search{
        display: block;
    }
    .search-time-box{
        width: calc((100% - 0.7em) /2);
        
        select{
            width: 100%;
            color: #909090;
            @apply font-normal;
        }
    }

}



// 右半部
.article-right{
    width: 300px;
    vertical-align: top;
    margin:0 auto;
    text-align: center;
    @apply block;
    .ig , .hotel , .food , .visit-people{
        padding:15px 10px;
        background-color: #ffffff;
        margin-bottom: 30px;
        @apply block;
    }
    .map{
        display: none;
        position: relative;
        width: 98%;
        margin-bottom: 30px;
        img{
            width: 100%;
        }
        .map-words{
            position: absolute;
            top: 15px;
            left:15px;
            color:#606060;
            width: 7em;
            text-align: left;
            @apply text-sm;
            .map-words-title{
                text-align: center;
                color: #C44D5F;
                border-bottom: solid 1px #C44D5F;
                margin-bottom: 5px;
                padding-bottom: 5px;
                @apply text-lg block;
                &:before , &:after{
                    content: "";
                    display: block;
                    width: 5px;
                    height: 5px;
                    border-radius: 50%;
                    position:absolute;
                    background-color: #C44D5F;
                }
                &:before{
                    top:30px;
                }
                &:after{
                    right:0px;
                    top:30px;
                }
            }
        }
        .map-name-01 , .map-name-02 , .map-name-03 , .map-name-04 , .map-name-05 , .map-name-06 , .map-name-07 , .map-name-08 , .map-name-09 , .map-name-10 , .map-name-11 , .map-name-12{
            outline: none;
            position: absolute;
            background-color: rgba(0,0,0,0);
            color:#673C42;
            transition: all .2s;
            border-radius: 3px;
            @apply block;
            &:hover{
                color: #C44D5F;
                text-decoration: underline;
                background-color: rgba(255,255,255,.4);
            }
        }

        .map-name-01{
            
            top: 29px;
            right:22px;
        }

        .map-name-02 {
            top: 82px;
            right: 80px;
        }

        .map-name-03 {
            top: 120px;
            right: 119px;
        }

        .map-name-04 {
            top: 119px;
            right: 61px;
        }

        .map-name-05 {
            top: 100px;
            right: 34px;
        }

        .map-name-06 {
            top: 145px;
            right: 25px;
        }

        .map-name-07 {
            top: 150px;
            right: 71px;
        }

        .map-name-08 {
            top: 161px;
            left: 124px;
        }

        .map-name-09 {
            top: 176px;
            right: 70px;
        }

        .map-name-10 {
            top: 194px;
            right: 15px;
        }

        .map-name-11 {
            top: 254px;
            left: 140px;
        }

        .map-name-12 {
            top: 200px;
            left: 58px;
        }

    }
    .ig{
        .ig-top-img{
            margin-bottom: 10px;
        }
        .ig-down-box{
            width: 100%;
            .ig-down-img{
                margin-right: 8px;
                margin-bottom: 10px;
                width:calc( ( 100% - 8px) / 2 );
                @apply inline-block;
                &:nth-child(2n){
                    margin-right: 0px;
                }
            }
        }
    }
    .ig-more{
        .ig-more-btn{
            width: 100%;
            outline: none;
            color: #AA5C5C;
            border:solid 1px #F8DAD7;
            padding:8px 0;
            position: relative;
            transition: all .2s;
            @apply block;
            .ig-more-btn-img{
                @apply inline-block;
                img{
                    position: relative;
                    top: -2px;
                    @apply inline-block;
                }
                .ig-more-btn-img-white{
                    opacity: 0;
                    position: absolute;
                    top: 0;
                    left: 0;
                }
            }
            &:hover{
                background-color: #C44D5F;
                color: #ffffff;
                .ig-more-btn-img .ig-more-btn-img-white{
                    opacity: 100;
                    position: initial;
                }
                .ig-more-btn-img .ig-more-btn-img-pink{
                    opacity: 0;
                    position: absolute;
                }
            }
        }
    }
    .hotel{
        .hotel-photo{
            margin-bottom: 10px;
        }
        .hotel-pink-btn , .hotel-purple-btn{
            margin-bottom: 10px;
            padding: 6px 0;
            color: #ffffff;
            outline: none;
            border-radius: 5px;
            transition: all .2s;
            width: 100%;
            @apply block;
        }
        .hotel-pink-btn{
            background-color: #E5779E;
            &:hover{
                background-color: #F582AB;
            }
        }
        .hotel-purple-btn{
            background-color:#5A81D8 ;
            &:hover{
                background-color: #6E9AFC;
            }
        }
    }
    .food{
        .food-photo{
            margin-bottom: 15px;
            .food-photo-self{
                margin-right: 8px;
                margin-bottom: 8px;
                width: calc( (100% - 8px) / 2 );
                @apply inline-block;
                &:nth-child(2n){
                    margin-right: 0px;
                }
            }
        }
    }
    .visit-people{
        color: #B14343;
        text-align: left;
        @apply font-light;
        .visit-people-list{
            margin-bottom: 8px;
            &:last-child{
                margin-bottom: 0px;
            }
        }
    }
}







