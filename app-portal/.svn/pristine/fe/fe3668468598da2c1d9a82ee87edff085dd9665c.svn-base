@import 'tailwindcss/base';
@import 'tailwindcss/components';

// 手機版
        nav{
            width:100%;
            @apply bg-white;
        }

        .menu{
            color:#882A2A;
            @apply block;

            li{
                @apply block w-full;
                a{
                    @apply block py-2 px-2 w-full text-left;
                    div{
                        display:inline-block;
                    }
                }
            }
            li:last-child{
                display:block;
                width:100%;
            }
        }

        .menu-show .menu{
            max-height: 500px;
        }
        
        .showmenu{
            display:block;
            position: fixed;
            top: 11px;
            right: 12px;
        }

        nav{
            background-color:#ffffff;
        }  


   

@import 'tailwindcss/utilities';


//電腦版

 @media(min-width:768px){

    .showmenu{
        @apply hidden;
    }

    .menu{
        max-height:60px;
        position:relative;
        top:0px;
        max-width:1200px;
        margin:0 auto;
        left:0px;
        right:0px; 
        @apply flex bg-white;

        li{
            @apply w-2/12;
            
            &:last-child{
                @apply hidden;
            }

            a{
                @apply bg-white text-center px-0;

                div{
                    @apply block;
                }
            }

            &:before{
                    content: "";
                    position: absolute;
                    z-index: 1;
                    top: 20px;
                    display: block;
                    height: 20px;
                    border-left: 1px solid #882A2A;
                }

            &:nth-child(7):after{
                    content: "";
                    position: absolute;
                    z-index: 1;
                    top: 20px;
                    right:0px;
                    display: block;
                    height: 20px;
                    border-right: 1px solid #882A2A;
            }

        }


    }
}