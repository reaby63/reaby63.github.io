
@import 'tailwindcss/base';
@import 'tailwindcss/components';

    header{
        margin:0 auto;
        width:100%;
        z-index:100;
        background-color:#ffffff;
        height:78px;
        display:flex;
        justify-content:space-between;
        align-items:center;
        padding:10px;
        position:fixed;
        @apply text-base;

        .header-left{
            @apply inline-block;
            a{
                color:#B97F87;
                @apply inline-block text-sm mx-2;
                img{
                    position:relative;
                    top:-1px;
                    @apply inline-block;
                }

                &:hover{
                    color:#EBA9B2;
                    @apply underline;
                }

                &:focus{
                    color:#EBA9B2;
                    @apply underline;
                }
            }

            .header-set{
                vertical-align: bottom;
                @apply block;
                .header-set-btn , .header-look-btn{
                    color:#B97F87;
                    transition: all .2s;
                    position: relative;
                    text-decoration: none;
                    @apply py-2 px-2 mx-0 text-base;
                    &:hover , &:focus{
                        background-color: #B97F87;
                        color: #ffffff;
                        &:after{
                            content: "";
                            display: block;
                            width: 0px;
                            height: 0px;
                            border: solid 11px;
                            border-color: #B97F87 transparent transparent transparent;
                            position: absolute;
                            top: 39px;
                            left: 3.4em;
                            z-index: 999;
                        }
                    }
                    &:after{
                        content: "";
                        display: none;
                        width: 0px;
                        height: 0px;
                        border: solid 11px;
                        border-color: #ffffff transparent transparent transparent;
                        position: absolute;
                        top: 36px;
                        left: 3.6em;
                    }
                }
            }
        }

         .member{
             display:none;
             color:#673C42;
             img{
                 display:inline-block;
             }
         }
     }

@import 'tailwindcss/utilities';

 @media(min-width:768px){
     header{
         height:44px;
         max-width:1200px;
         position: initial;
        
        .header-left{
            .header-set{
                @apply inline-block;
            }
        }

        .member{
            position:relative;
            display:block;
            a{
                &:hover{
                    @apply underline;
                }
            }

            .function-btn{
                cursor: pointer;
                position:relative;
                top:-2px;
                @apply p-1 ml-2;
                img{
                    width:18px;
                }
            }

            .function-list{
                position:absolute;
                right:-10px;
                box-shadow: 0 2px 3px #e2e2e2;
                background-color:white;
                z-index:99;
                margin-top:9px;
                display: none;
                transition: all .5s;
                a{  
                    color:#954D57;
                    background-color:white;
                    transition:all .4s;
                    @apply block py-3 px-6;

                    &:hover{
                        background-color:#FFF2F4;
                        text-decoration:none;
                    }
                }

            }
            .profile-list{
                position:absolute;
                right:20px;
                box-shadow: 0 2px 3px #e2e2e2;
                background-color:white;
                z-index:99;
                margin-top:9px;
                display: none;
                transition: all .5s;
                a{  
                    color:#954D57;
                    background-color:white;
                    transition:all .4s;
                    @apply block py-3 px-6;

                    &:hover{
                        background-color:#FFF2F4;
                        text-decoration:none;
                    }
                }

            }
            .show-function-list{
                display: block;
            }
            .show-profile-list{
                display: block;
            }

        }
            
    }

    
}
